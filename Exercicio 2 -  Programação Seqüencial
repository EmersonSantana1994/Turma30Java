				int ano = 365;
				int dias = 0;
				int mesesemdias = 0;
				int anoatual = 2021;
				int idadeemdias = 0;
				int anos = 0;
				    Scanneranner leia = new Scanner(System.in);
				
				System.out.println("Qual idade? ");
				idade = leia.nextInt();


				idadeemdias = idade * ano;
				System.out.println("A idade em dias é " + idadeemdias);

				anos =  anoatual - idade;
				System.out.println("\nO ano do seu nascimento é " + anos);

				mesesemdias = meses * idade;
				System.out.println ("\nOs meses de vida desta idade é "+ mesesemdias);

				}

