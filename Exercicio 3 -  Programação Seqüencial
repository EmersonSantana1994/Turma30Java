 * @author emers
 */
public class NewClass3 {
    
    		public static void main(String[] args) {
			
			        int tempo = 0;
			        int segundos = 60;
			        int minutos = 60;
			                 Scanner leia = new Scanner(System.in);
			        
					System.out.println("Qual o tempo em horas? ");
					tempo = leia.nextInt();



					minutos = tempo * minutos;
					segundos = minutos * segundos;


					System.out.println("Os minutos sao " + minutos);
					System.out.println("\nOs segundos sao " + segundos);
					
					
		}
}

 
